<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_delivery_type"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="top"
        android:paddingStart="4dp"
        android:paddingTop="8dp"
        android:paddingEnd="4dp"
        android:paddingBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_thunder_bg_orange" />

    <TextView
        android:id="@+id/text_delivery_description"
        style="@style/ProximaNovaRegularTextColorBlack.size15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center|start"
        android:text="@string/label_delivery_description_tm_done_delivery" />

</androidx.appcompat.widget.LinearLayoutCompat>