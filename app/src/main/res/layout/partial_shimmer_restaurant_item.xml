<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_circle_solid_color_light_gray"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_restaurant_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/image_new_batch"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/text_restaurant_name"
            app:layout_constraintEnd_toStartOf="@+id/image_favourite"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/linearLayout1"
            app:layout_constraintTop_toTopOf="@+id/text_restaurant_name" />


        <ImageView
            android:id="@+id/image_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/text_restaurant_name"
            app:layout_constraintEnd_toStartOf="@+id/text_restaurant_name"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_new_batch"
            app:layout_constraintTop_toTopOf="@+id/text_restaurant_name" />

        <TextView
            android:id="@+id/text_restaurant_name"
            style="@style/ProximaNovaBoldTextColorBlack.size16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorLightGray"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_favourite"
            app:layout_constraintTop_toTopOf="@+id/linearLayout1" />


        <TextView
            android:id="@+id/text_cuisine"
            style="@style/ProximaNovaRegularTextColorAsh.size14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="48dp"
            android:background="@color/colorLightGray"
            android:maxLines="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/text_restaurant_name"
            app:layout_constraintStart_toEndOf="@+id/linearLayout1"
            app:layout_constraintTop_toBottomOf="@id/text_restaurant_name" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorLightGray"
            app:layout_constraintStart_toEndOf="@+id/linearLayout1"
            app:layout_constraintTop_toBottomOf="@id/text_cuisine" />

        <TextView
            android:id="@+id/text_rating"
            style="@style/ProximaNovaRegularTextColorBlack.size12"
            android:layout_width="48dp"
            android:layout_height="12dp"
            android:background="@color/colorLightGray"
            app:layout_constraintBottom_toBottomOf="@id/imageView1"
            app:layout_constraintStart_toEndOf="@id/imageView1"
            app:layout_constraintTop_toTopOf="@id/imageView1" />

        <TextView
            android:id="@+id/text_off"
            style="@style/ProximaNovaRegularTextColorLipstick.size12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/text_rating"
            app:layout_constraintStart_toEndOf="@id/text_rating"
            app:layout_constraintTop_toTopOf="@id/text_rating"
            tools:text="30" />

        <TextView
            android:id="@+id/textView5"
            style="@style/ProximaNovaRegularTextColorLipstick.size12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/text_off"
            app:layout_constraintStart_toEndOf="@id/text_off"
            app:layout_constraintTop_toTopOf="@id/text_off" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorLightGray"
            app:layout_constraintEnd_toEndOf="@+id/imageView1"
            app:layout_constraintStart_toStartOf="@id/imageView1"
            app:layout_constraintTop_toBottomOf="@id/imageView1" />

        <TextView
            android:id="@+id/text_delivery_time"
            style="@style/ProximaNovaRegularTextColorAsh.size12"
            android:layout_width="124dp"
            android:layout_height="12dp"
            android:background="@color/colorLightGray"
            app:layout_constraintBottom_toBottomOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/text_rating"
            app:layout_constraintTop_toTopOf="@id/imageView2" />

        <View
            android:id="@+id/view_vertical"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorLightGray"
            app:layout_constraintBottom_toBottomOf="@id/text_delivery_time"
            app:layout_constraintStart_toEndOf="@id/text_delivery_time"
            app:layout_constraintTop_toTopOf="@id/text_delivery_time" />

        <TextView
            android:id="@+id/textView2"
            style="@style/ProximaNovaRegularTextColorAsh.size12"
            android:layout_width="30dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorLightGray"
            app:layout_constraintBottom_toBottomOf="@id/text_delivery_time"
            app:layout_constraintStart_toEndOf="@id/view_vertical"
            app:layout_constraintTop_toTopOf="@id/text_delivery_time" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>